{
    "manifest_version": 3,
    "name": "RestExplorer for Salesforce",
    "version": "0.0.0.1",
    "description": "A Chrome extension to explore Salesforce REST APIs.",
    "options_page": "options.html",
    "permissions": [
      "tabs","storage", "activeTab", "scripting","cookies","identity"
    ],
    "host_permissions": ["https://*.salesforce.com/*","https://*.force.com/*"],
    "content_scripts": [
      {
        "matches": ["https://*.salesforce.com/*","https://*.force.com/*"],
        "css": ["css/techdicer.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": { 
          "16": "icons/icon16.png",
          "32": "icons/icon48.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
        }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  